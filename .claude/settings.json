{
  "defaultMode": "plan",
  "plansDirectory": ".plans/",
  "planMode": {
    "alwaysAskBeforeExecuting": true
  },
  "permissions": {
    "deny": [
      "Bash(git push * --force*)",
      "Bash(git push * --delete *)",
      "Bash(git push * :*)",
      "Bash(git reset --hard *)",
      "Bash(git branch -D *)",
      "Bash(git clean -fdx*)",
      "Bash(rm -rf .git*)",
      "Bash(rm -rf /*)",
      "Bash(git remote rm *)",
      "Bash(npm unpublish *)",
      "Bash(npm deprecate *)",

      "Read(**/.env)",
      "Read(**/.env.local)",
      "Read(**/.env.*)",
      "Write(**/.env)",
      "Write(**/.env.local)",
      "Write(**/.env.*)",
      "Edit(**/.env)",
      "Edit(**/.env.local)",
      "Edit(**/.env.*)"
    ],
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Task",
      "WebFetch",
      "WebSearch",
      "mcp__ide__getDiagnostics",
      "mcp__ide__executeCode",

      "Bash(npm test)",
      "Bash(npm test -- *)",
      "Bash(npm run lint)",
      "Bash(npm run lint -- *)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npx tsc --noEmit)",
      "Bash(npx tsc --noEmit *)",
      "Bash(npm install)",
      "Bash(npm install *)",
      "Bash(npm ci)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git show *)",
      "Bash(gh pr *)",
      "Bash(gh issue *)"
    ]
  }
}
